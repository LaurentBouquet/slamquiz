{% extends 'base.html.twig' %}

{% block title %}Quiz index
{% endblock %}

{% block body %}
	<h1>Quiz index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Summary</th>
				<th>Number_of_questions</th>
				<th>Categories</th>
				<th>Active</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for quiz in quizzes %}
				<tr>
					<td>{{ quiz.id }}</td>
					<td>{{ quiz.title }}</td>
					<td>{{ quiz.summary }}</td>
					<td>{{ quiz.numberOfQuestions }}</td>
					<td>
						{% for category in quiz.categories %}
							-
							{{ category.longname }}
							<br>
						{% endfor %}
					</td>
					<td>{{ quiz.active ? 'Yes' : 'No' }}</td>
					{# <td>
						<a href="{{ path('quiz_show', {'id': quiz.id}) }}">show</a>
						<a href="{{ path('quiz_edit', {'id': quiz.id}) }}">edit</a>
					</td> #}
					{% if is_granted('ROLE_ADMIN') %}
						<td>
							<a href="{{ path('quiz_show', {'id': quiz.id}) }}">show</a>
							<a href="{{ path('quiz_edit', {'id': quiz.id}) }}">edit</a>
							<a href="{{ path('workout_new', {'id': quiz.id}) }}">start</a>
						</td>
					{% else %}
						{% if is_granted('ROLE_USER') %}
						<td>
							<a href="{{ path('workout_new', {'id': quiz.id}) }}">start</a>
						</td>
						{% endif %}
					{% endif %}
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('quiz_new') }}">Create new</a>
{% endblock %}
